; =============================================================================
; Zone file for testlab.local - Contains intentionally discoverable hosts
; =============================================================================

$TTL    604800
@       IN      SOA     ns1.testlab.local. admin.testlab.local. (
                              2024010101         ; Serial
                              604800             ; Refresh
                              86400              ; Retry
                              2419200            ; Expire
                              604800 )           ; Negative Cache TTL

; Name servers
@               IN      NS      ns1.testlab.local.
@               IN      NS      ns2.testlab.local.

; Mail servers
